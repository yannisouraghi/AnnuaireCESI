<Page
    x:Class="ProjetAnnuaire.RechercherPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa5="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:ProjetAnnuaire.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Rechercher"
    mc:Ignorable="d">
    <Page.DataContext>
        <local:RechercherPageViewModel />
    </Page.DataContext>

    <Page.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="LightGray" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="RowBackground" Value="White" />
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Padding" Value="5" />
                        <Setter Property="HorizontalAlignment" Value="Left" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#F5F5F5" />
                        <Setter Property="Foreground" Value="Black" />
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="BorderBrush" Value="LightGray" />
                        <Setter Property="Padding" Value="5" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="200" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="DarkSlateGray" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="30" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Background" Value="Orange" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="DarkSlateGray" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="7"
            Margin="10"
            HorizontalAlignment="Center"
            FontSize="18"
            FontWeight="Bold"
            Text="Rechercher un employé" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10"
            FontWeight="Bold">
            <Run Text="Rechercher par Site  " />
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="../Fonts/#FontAwesome"
                FontSize="20"
                Foreground="Black"
                Text="&#xf1ad;" />
        </TextBlock>

        <ComboBox
            Name="SitesComboBox"
            Grid.Row="1"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Margin="10"
            DisplayMemberPath="City"
            ItemsSource="{Binding SitesList, Mode=TwoWay}"
            SelectedItem="{Binding SelectedSite, Mode=TwoWay}" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="4"
            Grid.ColumnSpan="3"
            Margin="10"
            Foreground="Gray"
            Text="Saisir le site de recherche" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="10"
            FontWeight="Bold">
            <Run Text="Rechercher par Salarié  " />
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="../Fonts/#FontAwesome"
                FontSize="20"
                Foreground="Black"
                Text="&#xf183;" />
        </TextBlock>
        <TextBox
            x:Name="txtSearchByName"
            Grid.Row="2"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Margin="10"
            Text="{Binding SearchByName, Mode=TwoWay}" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="4"
            Grid.ColumnSpan="3"
            Margin="10"
            Foreground="Gray"
            Text="Entrez le nom de salarié" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="10"
            FontWeight="Bold">
            <Run Text="Rechercher par Service  " />
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="../Fonts/#FontAwesome"
                FontSize="20"
                Foreground="Black"
                Text="&#xf0e8;" />
        </TextBlock>
        <ComboBox
            Name="ServicesComboBox"
            Grid.Row="3"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Margin="10"
            DisplayMemberPath="Service"
            ItemsSource="{Binding ServicesList, Mode=TwoWay}"
            SelectedItem="{Binding SelectedService, Mode=TwoWay}" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="4"
            Grid.ColumnSpan="3"
            Margin="10"
            Foreground="Gray"
            Text="Saisir le service de recherche" />

        <Button
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="7"
            Width="50"
            Margin="10"
            Command="{Binding SearchCommand}"
            Style="{StaticResource ButtonStyle}">
            <Button.Content>
                <Viewbox Width="25" Height="25">
                    <fa5:FontAwesome Foreground="White" Icon="Solid_Search" />
                </Viewbox>
            </Button.Content>
        </Button>
        <Button
            Grid.Row="4"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Width="50"
            Margin="10"
            Click="EffacerButton_Click"
            Style="{StaticResource ButtonStyle}">
            <Button.Content>
                <Viewbox Width="25" Height="25">
                    <fa5:FontAwesome Foreground="White" Icon="Solid_Eraser" />
                </Viewbox>
            </Button.Content>
        </Button>

        <ScrollViewer
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="7"
            VerticalScrollBarVisibility="Auto">
            <DataGrid
                Name="EmployeesData"
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="7"
                Width="Auto"
                Height="400"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding EmployeesList, Mode=TwoWay}"
                MouseDoubleClick="DataGridDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding FirstName}"
                        Header="Prénom" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding LastName}"
                        Header="Nom" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Department}"
                        Header="Département" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </Grid>
</Page>
